<div class='container px-5 px-sm-0'>
    <div class='row'>
        <div class='col-md-3'>
            <h2>User</h2>
            <%= render 'publics/users/user', user: @user %>
        </div>
        <div class='col-md-8 offset-md-1'>
            <div class="row">
                <div class="col-10">
                <table class="table">
                    <thead>
                        <tr>
                            <th style="text-align: left; font-size: 20px;">
                                <%= @user.nickname %>
                            </th>
                            <th style="text-align: right; font-size: 20px;">
                                <%= current_user.nickname %>
                            </th>
                        </tr>
                    </thead>
                    <tbody id="message">
                        <%= render 'room', chats: @chats %>
                    </tbody>
                </table>
                <%= paginate @chats %>
                <%= render 'form', chat: @chat %>
            </div>
        </div>
    </div>
</div>
