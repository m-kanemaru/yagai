 <div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
      <%= render "publics/shared/error_messages", resource: @user %>
        <div class="form-group">
          <%= f.label :ニックネーム %>
          <%= f.text_field :nickname, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :名前 %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :誕生日 %>
          <%= f.date_select :birthdate, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :画像 %>
          <%= f.file_field :image_id, accept: 'image/*', class: "form-control-file" %>
        </div>
        <div class="form-group">
          <%= f.label :紹介文 %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-secondary'%>
        </div>
      <% end %>
      <%= link_to '退会',user_unsubscribe_path(@user), class: 'btn btn-danger' %>
    </div>
  </div>
</div>  